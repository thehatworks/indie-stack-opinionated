{
  "include": ["./server.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["node"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["../types", "../node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["../app/*"]
    }
  }
}
