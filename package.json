{
  "name": "indie-stack-opinionated-template",
  "private": true,
  "sideEffects": false,
  "browserslist": [
    "> 0.3%"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --env production",
    "build:remix": "remix build",
    "compile:server": "tsc -p ./bin/tsconfig.json --noEmit false",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --env development --watch",
    "dev:remix": "remix watch",
    "dev:serve": "cross-env NODE_ENV=development binode --require ./mocks -- nodemon ./bin/server.ts --watch ./bin/server.ts",
    "format": "prisma format && npm run lint -- --fix && prettier --write .",
    "generate:css": "postcss ./styles/main.scss --output ./app/styles/main.css --config ./config/ --verbose",
    "lint": "eslint --config ./config/eslint.config.js --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate dev && prisma db seed && npm run generate:css -- --env development",
    "start": "node ./bin/server.js",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "docker:build": "docker build . -t indie-stack-opinionated:latest",
    "docker:run": "docker run -p 8080:8080 --env SESSION_SECRET=testing --name indie-stack-opinionated -it indie-stack-opinionated:latest",
    "docker:purge": "docker rm indie-stack-opinionated && docker rmi indie-stack-opinionated:latest",
    "test": "vitest --config config/vitest.config.ts",
    "test:docker": "run-s docker:*",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b bin && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "tabWidth": 2,
    "quoteProps": "consistent"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@prisma/client": "^3.15.1",
    "@remix-run/express": "^1.6.3",
    "@remix-run/node": "^1.6.3",
    "@remix-run/react": "^1.6.3",
    "@remix-run/serve": "^1.6.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-auth": "^3.2.2",
    "remix-auth-form": "^1.1.2",
    "remix-domains": "^0.3.0",
    "remix-forms": "^0.16.1",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "^5.0.1",
    "@faker-js/faker": "^6.3.1",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "*",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.3",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.41",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "binode": "^1.0.5",
    "c8": "^7.11.3",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.9",
    "cypress": "^10.1.0",
    "daisyui": "^2.15.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^5.2.0",
    "msw": "^0.42.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-nesting": "^10.1.7",
    "postcss-scss": "^4.0.4",
    "postcss-sort-media-queries": "^4.2.1",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prisma": "^3.15.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.14.1",
    "zod-prisma": "^0.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
